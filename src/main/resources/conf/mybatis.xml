<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
     <!--显示日志-->
     <settings>
         <setting name="logImpl" value="STDOUT_LOGGING"/>
     </settings>

    <!--设置别名-->
    <typeAliases>
        <!--name是实体类的包名-->
        <package name="com.bj.crm.setting.domain"/>
        <package name="com.bj.crm.workbench.domain"/>
    </typeAliases>
    <mappers>
        <!--告诉 mybatis 要执行的 sql 语句的位置-->
        <!--name是包名，这个包中的所有mapper.xml一次都能加载-->
        <!--
            使用package的要求，
                1 mapper文件名称和dao接口名必须完全一样，包括大小写
                2 mapper文件和dao接口必须是同一目录
        -->
        <package name="com.bj.crm.setting.dao"/>
        <package name="com.bj.crm.workbench.dao"/>
    </mappers>
</configuration>